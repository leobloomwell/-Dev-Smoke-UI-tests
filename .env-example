# ============================================
# Bloomwell - Test Environment Configuration
# ============================================
# 
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control
#
# Command: cp .env.example .env

# ============================================
# Environment Selection
# ============================================
# Set TEST_ENV to: dev, staging, or prod
# Default: dev (if not specified)
TEST_ENV=dev

# ============================================
# User Role Selection
# ============================================
# Set TEST_ROLE to: admin, pharmacy_user, or pharmacy_employee
# Default: admin (if not specified)
TEST_ROLE=admin

# ============================================
# DEV Environment Configuration
# ============================================
DEV_BASE_URL=https://admin.marktplatz-dev.bloomwell.de
DEV_BASIC_AUTH_USERNAME=your_dev_basic_auth_username
DEV_BASIC_AUTH_PASSWORD=your_dev_basic_auth_password

# DEV - Admin Role Credentials
DEV_ADMIN_EMAIL=your_dev_admin_email@example.com
DEV_ADMIN_PASSWORD=your_dev_admin_password

# DEV - Pharmacy User Role Credentials
DEV_PHARMACY_USER_EMAIL=your_dev_pharmacy_user_email@example.com
DEV_PHARMACY_USER_PASSWORD=your_dev_pharmacy_user_password

# DEV - Pharmacy Employee Role Credentials
DEV_PHARMACY_EMPLOYEE_EMAIL=your_dev_pharmacy_employee_email@example.com
DEV_PHARMACY_EMPLOYEE_PASSWORD=your_dev_pharmacy_employee_password

# ============================================
# STAGING Environment Configuration
# ============================================
STAGING_BASE_URL=https://admin.marktplatz-staging.bloomwell.de
STAGING_BASIC_AUTH_USERNAME=your_staging_basic_auth_username
STAGING_BASIC_AUTH_PASSWORD=your_staging_basic_auth_password

# STAGING - Admin Role Credentials
STAGING_ADMIN_EMAIL=your_staging_admin_email@example.com
STAGING_ADMIN_PASSWORD=your_staging_admin_password

# STAGING - Pharmacy User Role Credentials
STAGING_PHARMACY_USER_EMAIL=your_staging_pharmacy_user_email@example.com
STAGING_PHARMACY_USER_PASSWORD=your_staging_pharmacy_user_password

# STAGING - Pharmacy Employee Role Credentials
STAGING_PHARMACY_EMPLOYEE_EMAIL=your_staging_pharmacy_employee_email@example.com
STAGING_PHARMACY_EMPLOYEE_PASSWORD=your_staging_pharmacy_employee_password

# ============================================
# PRODUCTION Environment Configuration
# ============================================
# ⚠️ WARNING: Use production credentials with extreme caution!
# Ensure you have proper authorization before running tests against production.
PROD_BASE_URL=https://admin.marktplatz.bloomwell.de
PROD_BASIC_AUTH_USERNAME=your_prod_basic_auth_username
PROD_BASIC_AUTH_PASSWORD=your_prod_basic_auth_password

# PROD - Admin Role Credentials
PROD_ADMIN_EMAIL=your_prod_admin_email@example.com
PROD_ADMIN_PASSWORD=your_prod_admin_password

# PROD - Pharmacy User Role Credentials
PROD_PHARMACY_USER_EMAIL=your_prod_pharmacy_user_email@example.com
PROD_PHARMACY_USER_PASSWORD=your_prod_pharmacy_user_password

# PROD - Pharmacy Employee Role Credentials
PROD_PHARMACY_EMPLOYEE_EMAIL=your_prod_pharmacy_employee_email@example.com
PROD_PHARMACY_EMPLOYEE_PASSWORD=your_prod_pharmacy_employee_password

# ============================================
# Slack Integration (Optional)
# ============================================
# Used for Slack reporter in playwright.config.ts
# Leave empty if Slack reporting is not needed
SLACK_BOT_USER_OAUTH_TOKEN=your_slack_oauth_token
SLACK_CHANNELS=your_slack_channel_id